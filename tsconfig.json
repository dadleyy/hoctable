{
  "compilerOptions": {
    "module"        : "amd",
    "target"        : "es5",
    "noImplicitAny" : false,
    "sourceMap"     : false,
    "allowJs"       : false,
    "baseUrl"       : "./src",
    "jsx"           : "react",
    "declaration"   : false,
    "typeRoots"     : [
      "./typings/modules"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.d.ts"
  ]
}
