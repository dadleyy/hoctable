{
  "compilerOptions": {
    "module"        : "amd",
    "target"        : "es5",
    "noImplicitAny" : false,
    "sourceMap"     : true,
    "allowJs"       : false,
    "baseUrl"       : "./src",
    "jsx"           : "react",
    "declaration"   : false,
    "typeRoots"     : [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/@types/react-dom/index.d.ts",
    "node_modules/@types/react/index.d.ts"
  ]
}
